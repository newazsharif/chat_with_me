<h2 class="ui center aligned icon header">
  <i class="circular orange signup icon"></i>
  Sign Up
</h2>

<%= form_for(@user,:html => {:class => "ui form", :role => "form"}, :url => users_path, :method => :post) do |f|%>
  <div class="field">
    <label>User Name</label>
    <%= f.text_field(:username,:placeholder => "User Name" )%>
  </div>
  <div class="field">
    <label>Password</label>
    <%= f.password_field(:password,:placeholder => "password")%>
    
  </div>
  <%= f.submit("Sign Up",:class => "ui orange submit button")%>
  
<% end %>